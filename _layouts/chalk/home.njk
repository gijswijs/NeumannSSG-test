{% set body_class = "home" %}
{% set page_title = site-title %}
{% set page_description = "" %}
{% set page_url = domain + rootpath + path %}
{% extends "/chalk/_layout.njk" %}


<ul class="article-list">
  {% for post in pagination.files %}
    <li class="article-list-item {% if scrollappear_enabled %}scrollappear{% endif %}">
      <a href="{{ rootpath }}{{ post.path }}" title="{{ post.title }}">
        <h5>
          {{ post.title }}
          
        </h5>
      </a>
      <p>
        {% if post.description %}
          {{ post.description }}  
        {% else %}
          {{ post.excerpt }}
        {% endif %}
      </p>
      {% include "/chalk/partials/info-footer.njk" %}
    </li>
  {% endfor %}
  {% if pagination.pages.length > 1 %}
    <li class="article-pagination {% if scrollappear_enabled %}scrollappear{% endif %}">
      {% if pagination.next %}
        <a href="{{rootpath}}{{pagination.next.path}}" class="article-pagination-left">Older posts</a>
      {% endif %}
      {% if pagination.previous %}
        <a href="{{rootpath}}{{pagination.previous.path}}" class="article-pagination-right">Newer posts</a>
      {% endif %}
    </li>
  {% endif %}
</ul>