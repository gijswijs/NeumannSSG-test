{
  "metadata": {
    "version": "0.1",
    "site-title": "Neumann SSG",
    "description": "A demonstration static site built using Neumann SSG",
    "author": "Gijs van Dam",
    "social-media": {
      "facebook": {
        "url": "https://www.facebook.com",
        "icon": "facebook",
        "name": "Facebook"
      }
    }
  },
  "source": "_src",
  "destination": "/",
  "clean": false,
  "devClean": false,
  "plugins": [
    { "sourceUrl": true, "dev": true },
    {
      "metalsmith-publish": { "draft": false, "private": false },
      "dev": false
    },
    {
      "metalsmith-collections": {
        "posts": {
          "pattern": "posts/**/*.md",
          "sortBy": "date",
          "reverse": true
        },
        "navigation": {
          "refer": false
        }
      }
    },
    { "metalsmith-markdown": true },
    {
      "metalsmith-more": {
        "key": "excerpt"
      }
    },
    { "metalsmith-permalinks": true },
    {
      "metalsmith-tags": {
        "handle": "tags",
        "path": "topics/:tag/index.html",
        "pathPage": "topics/:tag/:num/index.html",
        "perPage": 6,
        "layout": "/tag.njk",
        "sortBy": "date",
        "reverse": true,
        "skipMetadata": false,
        "slug": {
          "mode": "rfc3986"
        }
      }
    },
    {
      "metalsmith-layouts": {
        "directory": "_layouts",
        "pattern": "**",
        "engineOptions": {
          "partials": {
            "default": "_layouts/biron/default.hbs",
            "footer": "_layouts/biron/partials/footer.hbs",
            "header": "_layouts/biron/partials/header.hbs",
            "icon-sprite": "_layouts/biron/partials/icon-sprite.hbs",
            "icon": "_layouts/biron/partials/icon.hbs",
            "navigation": "_layouts/biron/partials/navigation.hbs",
            "social-media": "_layouts/biron/partials/social-media.hbs"
          }
        }
      }
    },
    {
      "metalsmith-feed": {
        "collection": "posts",
        "site_url": "https://gijswijs.github.io",
        "title": "Neumann SSG test",
        "description": "A demonstration static site built using Neumann SSG"
      }
    },
    {
      "metalsmith-mapsite": {
        "hostname": "https://gijswijs.github.io",
        "omitIndex": true
      }
    },
    {
      "metalsmith-assets": {
        "source": "_layouts/biron/assets",
        "destination": "/"
      }
    },
    { "writeBuiltUrl": true, "dev": true },
    {
      "cssChangeUrl": {
        "rootpath": "/"
      }
    },
    {
      "inlineSource": true,
      "dev": true
    },
    { "metalsmith-html-minifier": true, "dev": false }
  ]
}
