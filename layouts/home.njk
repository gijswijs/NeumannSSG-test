{% set body_class = "home" %}
{% extends "_layout.njk" %}

{% block content %}
<main>
  <ul>
    {% for post in collections.posts %}
    <li>
      <article>
        <header>
          <h1>{{ post.title }}</h1>
          <p><time datetime="{{ post.date | date("YYYY-MM-DD") }}">{{ post.date | date("MMMM D, YYYY") }}</time></p>
        </header>
        <section>
            <p>
            {{ post.excerpt | safe }}
          </p>
        </section>
      </article>
    </li>
    {% endfor %}
  </ul>
  {% include "components/_aside.njk" %}
</main>
{% endblock %} 